@model List<BasicEmployeeWebApp.Models.Employee>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<!--class="table table-striped table-condensed"-->
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Type.Name</td>
                <td>@item.Status.Name</td>
                <td>@Html.ActionLink("Edit", "Edit", new { employeeId = @item.Id })
                    @Html.ActionLink("Delete", "Delete", new { employeeId = @item.Id })</td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Make new Employee", "Create", null, new { @class = "btn btn-success" })
@if (ViewBag.sortDirection)
{
    @Html.ActionLink("Sort Asc Name", "Index", new { asc = true }, new { @class = "btn btn-default" })
}
else
{
    @Html.ActionLink("Sort Desc Name", "Index", new { asc = false }, new { @class = "btn btn-warning" })
}